{% extends 'base.html.twig' %}

{% block title %}
	{{outil.nom}}
{% endblock %}

{% block body %}
	<div class="card mb-3" style="max-width: 540px;">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="..." class="img-fluid rounded-start" alt="...">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">{{outil.nom}}</h5>
					<p class="card-text">{{outil.descriptif}}</p>
					<p class="card-text">
						<small class="text-body-secondary">{{outil.dateM|date('d/m/Y')}}</small>
					</p>
					<a href="{{outil.url}}">{{outil.url}}</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
