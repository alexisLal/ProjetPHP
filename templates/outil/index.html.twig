{% extends 'base.html.twig' %}

{% block title %}Outils
{% endblock %}

{% block body %}
	{% include "outil/_search_data.html.twig" %}
	<div class="container d-flex justify-content-center mt-5">
		{% for outil in outils %}
			<div class="card me-5">
				<img class="card-img-top" src="{{ vich_uploader_asset(outil, 'file') }}"/>
				<div class="card-body">
					<h5 class="card-title">{{outil.nom}}</h5>
					<p class="card-text">{{outil.descriptif}}</p>
					<a href="{{ path('outil_detail', {id: outil.id}) }}" class="btn btn-primary">Voir l'outil</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
