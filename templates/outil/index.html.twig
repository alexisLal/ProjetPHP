{% extends 'base.html.twig' %}

{% block title %}Outils{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="d-flex">
    {% for outil in outils %}
        <div class="card" style="width: 18rem;">
         <img src="{{ vich_uploader_asset(outil, 'file') }}"/>
            <div class="card-body">     
                <h5 class="card-title"></h5>{{outil.nom}}
               {#<p class="card-text">{{outil.descriptif}}</p>#}
                <a href="#" class="btn btn-primary">Voir l'outil</a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}